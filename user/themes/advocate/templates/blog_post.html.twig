{% extends 'partials/base.html.twig' %}

{% block content %}
    <section class="page-header">
        <div class="container">
            <h1>{{ page.title }}</h1>
            <div class="breadcrumbs">
                <a href="{{ base_url_absolute }}">Начало</a>
                <span class="sep">/</span>
                <a href="{{ base_url_absolute }}/blog">Блог</a>
                <span class="sep">/</span>
                <span>{{ page.title }}</span>
            </div>
        </div>
    </section>

    <section class="blog-single">
        <div class="container">
            <article class="blog-single__content">
                <div class="blog-single__meta">
                    <span>
                        <svg viewBox="0 0 24 24" width="14" height="14" fill="currentColor" style="vertical-align: -2px;margin-right:4px;"><path d="M9 11H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2zm2-7h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/></svg>
                        {{ page.date|date('d.m.Y') }}
                    </span>
                    {% if page.header.category %}
                    <span>
                        <svg viewBox="0 0 24 24" width="14" height="14" fill="currentColor" style="vertical-align: -2px;margin-right:4px;"><path d="M17.63 5.84C17.27 5.33 16.67 5 16 5L5 5.01C3.9 5.01 3 5.9 3 7v10c0 1.1.9 1.99 2 1.99L16 19c.67 0 1.27-.33 1.63-.84L22 12l-4.37-6.16z"/></svg>
                        {{ page.header.category }}
                    </span>
                    {% endif %}
                </div>

                {{ page.content|raw }}
            </article>

            <aside class="service-sidebar">
                <!-- Recent Posts -->
                <div class="sidebar-widget">
                    <h4>Последни статии</h4>
                    <ul class="sidebar-nav">
                        {% set blog_page = page.parent %}
                        {% for post in blog_page.children.order('date', 'desc')|slice(0,5) %}
                        <li>
                            <a href="{{ post.url }}" {% if post.slug == page.slug %}class="active"{% endif %}>
                                {{ post.title }}
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <!-- CTA Widget -->
                <div class="sidebar-widget sidebar-cta">
                    <h4>Правна консултация</h4>
                    <p>Имате въпрос? Свържете се с нас</p>
                    <a href="tel:+359898625633" class="phone">0898 625 633</a>
                    <a href="{{ base_url_absolute }}/contact" class="btn btn--primary btn--sm" style="width:100%;justify-content:center;">
                        Пишете ни
                    </a>
                </div>
            </aside>
        </div>
    </section>
{% endblock %}
